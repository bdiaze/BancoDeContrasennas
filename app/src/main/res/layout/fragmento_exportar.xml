<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.theroot.passbank.fragmento.FragExportar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/respDatos"
            android:textColor="@color/letra"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/descripExport"
            android:textColor="@color/letra"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/cuentaSelec"
            android:textColor="@color/letra"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IV_vaciar_usuario"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_close_white_24dp"
                android:contentDescription="@string/borrarCuenta"/>

            <EditText
                android:id="@+id/ET_cuenta_seleccionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="@string/clickSelecCuenta"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:text=""
                android:textColor="@color/letra"
                android:textColorHint="@color/letraAtenuada"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/TV_instruccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="@string/cambiarCuenta"
            android:textColor="@android:color/background_light"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>